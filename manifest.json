{
  "manifest_version": 3,
  "name": "Send to ChatGPT",
  "version": "2.0.1",
  "description": "Send selected text or the current URL to a ChatGPT sidebar via configurable keyboard shortcuts.",
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://*.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Send to ChatGPT â€” Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://chatgpt.com/*"],
      "js": ["chatgpt-bridge.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
