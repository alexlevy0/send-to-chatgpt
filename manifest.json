{
  "manifest_version": 3,
  "name": "Split Summary",
  "version": "1.0.0",
  "description": "Split your tab and get an AI summary of any article via ChatGPT",
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "cookies"
  ],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://*.openai.com/*"
  ],
  "action": {
    "default_title": "Split & Summarize",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://chatgpt.com/*"],
      "js": ["chatgpt-bridge.js"],
      "run_at": "document_idle"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
